[color]
	branch = auto
	status = auto
	diff = true
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
	whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[apply]
	whitespace = nowarn
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	pager = !$HOME/bin/git-pager \"$@\"
	info = !$HOME/bin/git-info \"$@\"


[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less -FRSX





